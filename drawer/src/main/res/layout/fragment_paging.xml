<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.paging.PagingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycle_view"
                android:layout_marginBottom="100dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_alignParentBottom="true">
        <Button
                android:text="insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/insert"
        />
        <Button
                android:text="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/delete"
        />
        <Button
                android:text="update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/update"
        />
        <Button
                android:text="getAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/getAll"
        />
    </LinearLayout>


</RelativeLayout>
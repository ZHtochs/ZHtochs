<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable name="info" type="com.example.drawer.TestFragment"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.example.drawer.DragView2 android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="200dp" android:layout_height="200dp"
                      android:background="@color/purple_200"
                      android:id="@+id/tv1"
                      android:onClick="@{info}"
                      android:text="textview1"/>

            <TextView android:layout_width="200dp" android:layout_height="200dp"
                      android:id="@+id/tv2"
                      android:background="@color/teal_200"
                      android:layout_marginStart="100dp"
                      android:layout_marginTop="200dp"
                      android:onClick="@{info}"
                      android:text="textview2"/>
            <TextView android:layout_width="200dp" android:layout_height="200dp"
                      android:id="@+id/tv3"
                      android:background="@color/red"
                      android:layout_marginStart="200dp"
                      android:layout_marginTop="400dp"
                      android:onClick="@{info}"
                      android:text="textview3"/>
        </com.example.drawer.DragView2>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>

<com.example.drawer.ui.slide.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                         android:layout_width="match_parent"
                                         android:id="@+id/slide"
                                         android:layout_height="40dp"
                                         android:gravity="center_horizontal">
    <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/side"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LeftMenu"
                android:textSize="20sp"
                android:background="@drawable/baseline_3d_rotation_black_24dp"
                android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/content"
            android:background="@color/teal_200"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="main"
                android:textSize="30sp"
                android:layout_margin="10dp"/>
    </LinearLayout>
</com.example.drawer.ui.slide.SlideLayout>

<?xml version="1.0" encoding="utf-8"?>

<com.example.drawer.ui.slideshow.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/slide"
                                             android:layout_height="50dp"
                                             android:gravity="center_horizontal">
    <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:id="@+id/side"
            android:orientation="vertical">
        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/delete_image"
                   android:layout_centerInParent="true"
                   android:src="@drawable/baseline_delete_black_24dp"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layoutDirection="ltr"
                  android:id="@+id/content"
                  android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="8dp"
                app:cardElevation="@dimen/activity_horizontal_margin">
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal">

                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/position"
                        android:text="main"
                        android:textSize="10sp"
                        android:layout_margin="10dp"/>
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/student_id"
                        android:text="main"
                        android:textSize="10sp"
                        android:layout_margin="10dp"/>
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/student_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/student_class_id"
                        android:text="main"
                        android:textSize="10sp"
                        android:layout_margin="10dp"/>

                <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/student_class_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/studentName"
                        android:text="main"
                        android:textSize="10sp"
                        android:layout_margin="10dp"/>

                <CheckBox
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/checkbox"
                        android:layout_margin="10dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</com.example.drawer.ui.slideshow.SlideLayout>
